<resources
    xmlns:tools="http://schemas.android.com/tools"
>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- NoActionBar Base application theme. -->
    <style name="AppTheme.Base.NoActionBar" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fully Transparent theme. -->
    <style name="AppTheme.Base.Transparent" parent="AppTheme.Base.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- ##################### Base application widget definition. ########################## -->

    <!-- Base Non-Clickable Widget Properties. -->
    <style name="NonClickableProperties" parent="AppTheme.Base">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Base Clickable Widget Properties. -->
    <style name="ClickableProperties" parent="AppTheme.Base">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <!-- Base Text Properties. -->
    <style name="TextProperties" parent="AppTheme.Base">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_body_one</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
